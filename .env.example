# STRICT_MODE="false"

# Dynamic Fees (Alternative to static)
# FEE_TYPE="dynamic"
# FEE_DYNAMIC_BASE="100"
# FEE_DYNAMIC_MAX="500"

# Split Rewards (99.9% Creator / 0.1% Interface)
