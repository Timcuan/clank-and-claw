# Core
TELEGRAM_BOT_TOKEN=123456789:REPLACE_ME
TELEGRAM_ADMIN_IDS=123456789
PRIVATE_KEY=0xREPLACE_ME_64_HEX

# Base RPC (primary + failover)
RPC_URL=https://mainnet.base.org
RPC_FALLBACK_URLS=https://base-mainnet.g.alchemy.com/v2/REPLACE_ME,https://base.publicnode.com,https://base.llamarpc.com

# Telegram API gateway failover (optional, keep api.telegram.org first)
TELEGRAM_API_BASES=https://api.telegram.org
# Optional custom file endpoint if your gateway separates /file path
TELEGRAM_FILE_BASE=

# IPFS providers (configure at least one)
# No-key option (own Kubo node):
IPFS_KUBO_API=http://127.0.0.1:5001

# Recommended active provider:
PINATA_API_KEY=
PINATA_SECRET_KEY=

# Legacy providers (optional, require explicit enable):
NFT_STORAGE_TOKEN=
ENABLE_NFT_STORAGE_CLASSIC=false
INFURA_PROJECT_ID=
INFURA_SECRET=
ENABLE_INFURA_IPFS_LEGACY=false

# Optional IPFS read gateways for metadata/image fallback
IPFS_GATEWAYS=https://gateway.pinata.cloud/ipfs/{cid},https://nftstorage.link/ipfs/{cid},https://cloudflare-ipfs.com/ipfs/{cid}

# Optional default context fallback used by CLI token.json flow
DEFAULT_CONTEXT_ID=
DEFAULT_IMAGE_URL=
VANITY=true
REQUIRE_CONTEXT=true
SMART_VALIDATION=true
# Persistent bot config store (draft + presets)
CONFIG_STORE_PATH=./data/bot-config-store.json

# Optional legacy spoof/env-mode controls (mostly for CLI/OpenClaw env flow)
TOKEN_ADMIN=
ADMIN_SPOOF=
REWARD_CREATOR=
REWARD_INTERFACE=
REWARD_CREATOR_ADMIN=
REWARD_INTERFACE_ADMIN=
