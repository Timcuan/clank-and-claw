{
    "name": "clanker_deploy_token",
    "description": "Deploy an ERC-20 token on Base blockchain with automated liquidity via Clanker SDK v4. Returns JSON with deployment result.",
    "parameters": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string",
                "description": "Token name (e.g., 'ClawBot AI')"
            },
            "symbol": {
                "type": "string",
                "description": "Token ticker symbol (e.g., 'CLAW')"
            },
            "image": {
                "type": "string",
                "description": "Token logo - IPFS CID (bafkrei...) or HTTPS URL"
            },
            "description": {
                "type": "string",
                "description": "Token/project description"
            },
            "admin": {
                "type": "string",
                "description": "Wallet address that will own the token/LP"
            },
            "fees": {
                "type": "object",
                "description": "Fee configuration (100 bps = 1%)",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "static",
                            "dynamic"
                        ],
                        "default": "static"
                    },
                    "clankerFee": {
                        "type": "integer",
                        "description": "Token side fee in bps",
                        "default": 100
                    },
                    "pairedFee": {
                        "type": "integer",
                        "description": "WETH side fee in bps",
                        "default": 100
                    }
                }
            },
            "context": {
                "type": "object",
                "description": "Social context for indexing (IMPORTANT: must be specific post URL)",
                "properties": {
                    "platform": {
                        "type": "string",
                        "enum": [
                            "twitter",
                            "farcaster",
                            "clanker"
                        ],
                        "default": "twitter"
                    },
                    "messageId": {
                        "type": "string",
                        "description": "Specific post URL (e.g., https://x.com/user/status/123)"
                    }
                }
            },
            "socials": {
                "type": "object",
                "properties": {
                    "x": {
                        "type": "string"
                    },
                    "telegram": {
                        "type": "string"
                    },
                    "farcaster": {
                        "type": "string"
                    },
                    "website": {
                        "type": "string"
                    }
                }
            },
            "sniperFees": {
                "type": "object",
                "description": "Anti-bot protection (Unibps: 1,000,000 = 100%)",
                "properties": {
                    "startingFee": {
                        "type": "integer",
                        "default": 666777
                    },
                    "endingFee": {
                        "type": "integer",
                        "default": 41673
                    },
                    "secondsToDecay": {
                        "type": "integer",
                        "default": 15
                    }
                }
            },
            "devBuy": {
                "type": "number",
                "description": "ETH amount to buy at launch (optional)"
            },
            "vanity": {
                "type": "boolean",
                "description": "Request Clanker vanity address suffix",
                "default": true
            },
            "dryRun": {
                "type": "boolean",
                "description": "Validate config without deploying",
                "default": false
            },
            "strictMode": {
                "type": "boolean",
                "description": "Enforce Clankerworld Blue Badge requirements (5% max fee, farcaster only)",
                "default": false
            },
            "privateKey": {
                "type": "string",
                "description": "Deployer private key (optional - uses .env if not provided)"
            }
        },
        "required": [
            "name",
            "symbol",
            "image"
        ]
    },
    "returns": {
        "type": "object",
        "properties": {
            "success": {
                "type": "boolean"
            },
            "address": {
                "type": "string",
                "description": "Deployed token address"
            },
            "txHash": {
                "type": "string"
            },
            "scanUrl": {
                "type": "string"
            },
            "error": {
                "type": "string"
            }
        }
    }
}