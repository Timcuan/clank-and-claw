{
    "name": "clanker_deploy_token",
    "description": "Deploys an ERC-20 token on Base with automated liquidity. Supports strict mode and advanced configuration (fees, rewards, pool positions, sniper fees, socials).",
    "parameters": {
        "type": "object",
        "properties": {
            "TOKEN_NAME": {
                "type": "string",
                "description": "The name of the token (e.g., 'ClawBot AI')"
            },
            "TOKEN_SYMBOL": {
                "type": "string",
                "description": "The ticker symbol (e.g., 'CLAW')"
            },
            "TOKEN_IMAGE": {
                "type": "string",
                "description": "Image URL or IPFS CID for the token logo"
            },
            "METADATA_DESCRIPTION": {
                "type": "string",
                "description": "Project description for ClankerWorld verification"
            },
            "SOCIALS": {
                "type": "object",
                "properties": {
                    "x": { "type": "string" },
                    "telegram": { "type": "string" },
                    "farcaster": { "type": "string" },
                    "website": { "type": "string" }
                }
            },
            "CONTEXT": {
                "type": "object",
                "properties": {
                    "platform": { "type": "string" },
                    "messageId": { "type": "string" }
                }
            },
            "CONTEXT_MESSAGE_ID": {
                "type": "string",
                "description": "Warpcast URL or Cast Hash for social indexing"
            },
            "CONTEXT_PLATFORM": {
                "type": "string",
                "description": "Context platform (farcaster, twitter, instagram, clanker)"
            },
            "DEV_BUY_ETH_AMOUNT": {
                "type": "number",
                "description": "Amount of ETH to buy at launch (strict mode requires > 0)"
            },
            "STRICT_MODE": {
                "type": "boolean",
                "default": true,
                "description": "Enforce Clankerworld checklist compliance (max 5% fees, farcaster context, dev buy required)."
            },
            "HIGH_TAX": {
                "type": "boolean",
                "description": "DEGEN MODE: allows fees > 5%."
            },
            "DRY_RUN": {
                "type": "boolean",
                "description": "If true, validate config without deployment."
            },
            "RPC_URL": {
                "type": "string",
                "description": "Optional RPC URL override"
            },
            "PRIVATE_KEY": {
                "type": "string",
                "description": "Deployer private key (not required for DRY_RUN)"
            },
            "VANITY": {
                "type": "boolean",
                "description": "Request Clanker vanity suffix"
            },
            "TOKEN_ADMIN": {
                "type": "string",
                "description": "Liquidity owner / token admin address"
            },
            "ADMIN_SPOOF": {
                "type": "string",
                "description": "Redirect reward recipient to a different address"
            },
            "REWARD_RECIPIENT": {
                "type": "string",
                "description": "Rewards recipient address"
            },
            "REWARD_CREATOR": {
                "type": "string",
                "description": "Creator rewards address (99.9%)"
            },
            "REWARD_INTERFACE": {
                "type": "string",
                "description": "Interface rewards address (0.1%)"
            },
            "REWARDS": {
                "type": "object",
                "properties": {
                    "recipients": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "recipient": { "type": "string" },
                                "bps": { "type": "integer" },
                                "token": { "type": "string" }
                            },
                            "required": ["recipient", "bps", "token"]
                        }
                    }
                }
            },
            "FEES": {
                "type": "object",
                "properties": {
                    "type": { "type": "string", "enum": ["static", "dynamic"] },
                    "clankerFee": { "type": "integer" },
                    "pairedFee": { "type": "integer" },
                    "baseFee": { "type": "integer" },
                    "maxFee": { "type": "integer" },
                    "referenceTickFilterPeriod": { "type": "integer" },
                    "resetPeriod": { "type": "integer" },
                    "resetTickFilter": { "type": "integer" },
                    "feeControlNumerator": { "type": "integer" },
                    "decayFilterBps": { "type": "integer" }
                }
            },
            "SNIPER_FEES": {
                "type": "object",
                "properties": {
                    "startingFee": { "type": "integer" },
                    "endingFee": { "type": "integer" },
                    "secondsToDecay": { "type": "integer" }
                }
            },
            "POOL": {
                "type": "object",
                "properties": {
                    "type": { "type": "string" },
                    "startingTick": { "type": "integer" },
                    "pairedToken": { "type": "string" },
                    "positions": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "tickLower": { "type": "integer" },
                                "tickUpper": { "type": "integer" },
                                "positionBps": { "type": "integer" }
                            },
                            "required": ["tickLower", "tickUpper", "positionBps"]
                        }
                    }
                }
            }
        },
        "required": [
            "TOKEN_NAME",
            "TOKEN_SYMBOL",
            "TOKEN_IMAGE",
            "METADATA_DESCRIPTION",
            "CONTEXT_MESSAGE_ID",
            "DEV_BUY_ETH_AMOUNT"
        ]
    }
}
